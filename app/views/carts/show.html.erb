<center>
<div class="w-full max-w-sm bg-emerald-200 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <div class="px-5 pb-5">
        <br>
  <h1 class="text-3xl font-semibold mt-0 mb-2 text-rose-700">Shopping cart</h1>

  <h2 class=" text-xl">Items: <%= @cart.size %></h2>
  <br>
  <% @cart.each do |cart_item| %>
    <br>
    <p class="font-bold text-xl">Name: <%= cart_item.name %></p>
    <p class="font-bold text-xl"> Price: <%= cart_item.price %></p>
    <%= button_to "Remove from cart", remove_from_cart_path(cart_item), method: :delete , class:"text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2"%>
      
  <% end %>
</div>
          </div>
</center>
