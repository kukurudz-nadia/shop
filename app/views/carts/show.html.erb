<div>
  <h1 class="font-bold text-4xl">Shopping cart</h1>
  <h2>Items: <%= @cart.size %></h2>
  <br>
  <% @cart.each do |cart_item| %>
    <br>
    <%= cart_item.name %>
    <%= cart_item.price %>
    <%= button_to "Remove from cart", remove_from_cart_path(cart_item), method: :delete %>
  <% end %>
</div>
