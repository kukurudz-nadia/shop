<div class="product">
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        
        <tbody>
            <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <%= link_to product.name, product_path(product) %>
                </th>
                <td class="px-6 py-4">
                    <%= link_to product.price, product_path(product) %>
                </td>
                <td class="px-6 py-4">
                    <%= link_to product.description, product_path(product) %>
                </td>
                <td class="px-6 py-4">
                    <%= link_to product.position, product_path(product) %>
                </td>
                <td class="px-6 py-4">
                    <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                    <%= button_to "Add to cart", carts_products_path(:product_id => product.id)%></a>
                </td>
            </tr>
          
        </tbody>
    </table>
</div>
</div>