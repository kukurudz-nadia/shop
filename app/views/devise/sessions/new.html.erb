<div class="text-center">
<h2  class="text-3xl font-normal leading-normal mt-0 mb-2 text-sky-500">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"text-base font-semibold text-gray-900 dark:text-white" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-sky-500 " %>
  </div>

  <div class="field">
    <%= f.label :password, class:"text-base font-semibold text-gray-900 dark:text-white" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "text-sky-500 " %>
  </div>
<br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<br>
  <div class="actions">
    <%= f.submit "Log in", class: "btn-blue"  %>
  </div>
  <br>
<% end %>

