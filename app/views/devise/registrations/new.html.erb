<div class="text-center">
<h2 class="text-3xl font-normal leading-normal mt-0 mb-2 text-sky-500">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
 <div class="field ">
    <%= f.label :first_name, class:"text-base font-semibold text-gray-900 dark:text-white"%><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "text-sky-500 " %>
  </div> 

  <div class="field">
    <%= f.label :last_name, class:"text-base font-semibold text-gray-900 dark:text-white" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "text-sky-500 " %>
  </div>

  <div class="field">
    <%= f.label :phone, class:"text-base font-semibold text-gray-900 dark:text-white" %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "text-sky-500 " %>
  </div>

  <div class="field">
    <%= f.label :email, class:"text-base font-semibold text-gray-900 dark:text-white" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-sky-500 " %>
  </div>

  <div class="field">
    <%= f.label :password, class:"text-base font-semibold text-gray-900 dark:text-white" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters min)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "text-sky-500 " %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"text-base font-semibold text-gray-900 dark:text-white" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-sky-500 " %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up", class: "bg-cyan-500 text-white active:bg-cyan-600 font-bold uppercase text-xs px-4 py-2 rounded shadow hover:shadow-md outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150"  %>
  </div>
  <br>
<% end %>
</div>

